# Copy this file to .env and fill in your API keys
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

# Spotify API (Optional - for better metadata and cover art)
# Get your credentials at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Deezer API (Optional - for additional metadata)
# No API key required, but you can set a custom endpoint
DEEZER_API_ENDPOINT=https://api.deezer.com

# MusicBrainz API (Optional - for comprehensive metadata)
# No API key required, but please set your contact info
# This is an ethical requirement from MusicBrainz
MUSICBRAINZ_APP_NAME=antifa-free-music-share
MUSICBRAINZ_APP_VERSION=1.0.0
MUSICBRAINZ_CONTACT=your-email@example.com

# Genius API (Optional - for lyrics)
# Get your token at: https://genius.com/api-clients
GENIUS_ACCESS_TOKEN=

# AudD API (Optional - for audio recognition)
# Get your API key at: https://audd.io/
AUDD_API_KEY=

# Application Settings
DOWNLOAD_DIR=./downloads
MAX_CONCURRENT_DOWNLOADS=5
AUDIO_QUALITY=320k
AUDIO_FORMAT=mp3

# Rate Limiting (requests per minute)
SPOTIFY_RATE_LIMIT=30
MUSICBRAINZ_RATE_LIMIT=50
GENIUS_RATE_LIMIT=30

# Feature Flags
ENABLE_SPOTIFY=true
ENABLE_DEEZER=true
ENABLE_MUSICBRAINZ=true
ENABLE_GENIUS_LYRICS=true
ENABLE_COVER_ART_ENHANCEMENT=true
