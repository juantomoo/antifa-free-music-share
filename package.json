{
  "name": "antifa-free-music-share",
  "version": "1.0.0",
  "description": "Liberate music from streaming monopolies. A community tool to free artists and listeners from capitalist platforms that exploit creators.",
  "main": "electron/main.js",
  "bin": {
    "antifa-music": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "clean": "rm -rf dist",
    "install-deps": "npm install && npm run install-system-deps",
    "install-system-deps": "echo 'Installing system dependencies...' && (which yt-dlp || pip install yt-dlp) && (which ffmpeg || echo 'Please install ffmpeg manually')",
    "electron": "npm run build && electron .",
    "electron-dev": "electron . --dev",
    "package": "npm run build && electron-builder",
    "package-win": "npm run build && electron-builder --win",
    "package-mac": "npm run build && electron-builder --mac",
    "package-linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@types/node": "^20.10.0",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "dotenv": "^17.2.3",
    "ffmpeg-static": "^5.2.0",
    "fs-extra": "^11.3.2",
    "fuzzy-search": "^3.2.1",
    "genius-lyrics": "^4.4.7",
    "glob": "^11.0.3",
    "inquirer": "^9.2.12",
    "musicbrainz-api": "^0.26.0",
    "node-id3": "^0.2.9",
    "ora": "^7.0.1",
    "p-limit": "^3.1.0",
    "puppeteer": "^21.5.2",
    "spotify-web-api-node": "^5.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "youtube-dl-exec": "^2.4.13"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/inquirer": "^9.0.7",
    "@types/spotify-web-api-node": "^5.0.11",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12"
  },
  "keywords": [
    "music-liberation",
    "anti-fascist",
    "community-tools",
    "artist-freedom",
    "streaming-alternative",
    "bandcamp",
    "independent-music",
    "free-culture",
    "copyleft"
  ],
  "author": "Eonaria Project",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/juantomoo/antifa-free-music-share.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.eonaria.antifa-free-music-share",
    "productName": "Antifa Free Music Share",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "ytmusic_search.py",
        "to": "ytmusic_search.py"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Audio",
      "icon": "electron/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music",
      "icon": "electron/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
